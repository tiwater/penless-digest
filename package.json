{
  "name": "penless-digest",
  "version": "2.0.0",
  "description": "A browser extension that helps you to read articles faster.",
  "private": true,
  "dependencies": {
    "@types/node": "^20.4.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "clsx": "^2.0.0",
    "daisyui": "^3.5.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-markdown": "^8.0.7",
    "react-scripts": "5.0.1",
    "react-tooltip": "^5.20.0",
    "remark-gfm": "^3.0.1",
    "tailwindcss": "^3.3.3",
    "web-vitals": "^3.4.0"
  },
  "scripts": {
    "watch": "npm-watch",
    "start": "react-scripts start",
    "build": "INLINE_RUNTIME_CHUNK=false react-app-rewired build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.243",
    "@types/webextension-polyfill": "^0.10.1",
    "customize-cra": "^1.0.0",
    "npm-watch": "^0.11.0",
    "prettier": "2.8.7",
    "react-app-rewired": "^2.2.1",
    "typescript": "^4.9.5"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**",
        "public/**",
        "*.json",
        "*.js"
      ],
      "ignore": [
        "build",
        "node_modules",
        ".vscode"
      ],
      "extensions": [
        "js",
        "ts",
        "tsx",
        "json",
        "css"
      ]
    }
  }
}
